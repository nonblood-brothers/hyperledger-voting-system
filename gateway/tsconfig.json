{
    "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "lib": [
            "ESNext",
        ],
        "esModuleInterop": true,
        "allowJs": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@handler/*": [
                "./src/handler/*"
            ],
            "@constant/*": [
                "./src/constant/*"
            ],
            "@helper/*": [
                "./src/helper/*"
            ],
            "@middleware/*": [
                "./src/middleware/*"
            ],
            "@router/*": [
                "./src/router/*"
            ],
            "@exception/*": [
                "./src/exception/*"
            ],
            "@util/*": [
                "./src/util/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./src/**/*.spec.ts"
    ],
}